<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RGBSliderFragment">


    <TextView
        android:id="@+id/tv_red"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Red Channel"
        app:layout_constraintBottom_toTopOf="@+id/slider_r"
        app:layout_constraintEnd_toEndOf="@+id/slider_r"
        app:layout_constraintStart_toStartOf="@+id/slider_r" />

    <TextView
        android:id="@+id/tv_green"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Green Channel"
        app:layout_constraintBottom_toTopOf="@+id/slider_g"
        app:layout_constraintEnd_toEndOf="@+id/slider_g"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/slider_g" />

    <TextView
        android:id="@+id/tv_blue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Blue Channel"
        app:layout_constraintBottom_toTopOf="@+id/slider_b"
        app:layout_constraintEnd_toEndOf="@+id/slider_b"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/slider_b" />

    <TextView
        android:id="@+id/tv_brightness"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Brightness"
        app:layout_constraintBottom_toTopOf="@+id/slider_brightness"
        app:layout_constraintEnd_toEndOf="@+id/slider_brightness"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/slider_brightness" />

    <SeekBar
        android:id="@+id/slider_r"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:max="100"
        android:min="0"
        android:progress="0"
        android:progressTint="#F44336"
        android:thumbTint="#F44336"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/slider_g"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:max="100"
        android:min="0"
        android:progress="0"
        android:progressTint="#4CAF50"
        android:thumbTint="#4CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider_r" />

    <SeekBar
        android:id="@+id/slider_b"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:max="100"
        android:min="0"
        android:progress="0"
        android:progressTint="#2196F3"
        android:thumbTint="#2196F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider_g" />

    <SeekBar
        android:id="@+id/slider_brightness"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:max="100"
        android:min="0"
        android:progress="100"
        android:progressTint="#000000"
        android:thumbTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider_b" />

</androidx.constraintlayout.widget.ConstraintLayout>
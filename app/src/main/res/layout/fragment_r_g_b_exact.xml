<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RGBExactFragment">

   <Button
       android:id="@+id/button"
       android:layout_width="128dp"
       android:layout_height="wrap_content"
       android:text="Send"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/edit_b_value" />

   <EditText
       android:id="@+id/edit_r_value"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:autofillHints="number"
       android:ems="10"
       android:hint="0"
       android:inputType="numberDecimal"
       android:minHeight="48dp"
       android:singleLine="true"
       android:text="0"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.502"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.25" />

   <EditText
       android:id="@+id/edit_g_value"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="32dp"
       android:autofillHints="number"
       android:ems="10"
       android:hint="0"
       android:inputType="numberDecimal"
       android:minHeight="48dp"
       android:text="0"
       app:layout_constraintEnd_toEndOf="@+id/edit_r_value"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="@+id/edit_r_value"
       app:layout_constraintTop_toBottomOf="@+id/edit_r_value" />

   <EditText
       android:id="@+id/edit_b_value"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="32dp"
       android:autofillHints="number"
       android:ems="10"
       android:hint="0"
       android:inputType="numberDecimal"
       android:minHeight="48dp"
       android:text="0"
       app:layout_constraintEnd_toEndOf="@+id/edit_g_value"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="@+id/edit_g_value"
       app:layout_constraintTop_toBottomOf="@+id/edit_g_value" />

   <TextView
       android:id="@+id/tv_r_value"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Value for red channel (0-255)"
       app:layout_constraintBottom_toTopOf="@+id/edit_r_value"
       app:layout_constraintEnd_toEndOf="@+id/edit_r_value"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="@+id/edit_r_value" />

   <TextView
       android:id="@+id/tv_g_value"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Value for green channel (0-255)"
       app:layout_constraintBottom_toTopOf="@+id/edit_g_value"
       app:layout_constraintEnd_toEndOf="@+id/edit_g_value"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="@+id/edit_g_value" />

   <TextView
       android:id="@+id/tv_g_value2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Value for green channel (0-255)"
       app:layout_constraintBottom_toTopOf="@+id/edit_b_value"
       app:layout_constraintEnd_toEndOf="@+id/edit_b_value"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="@+id/edit_b_value" />

</androidx.constraintlayout.widget.ConstraintLayout>